@{
    ViewData["Title"] = "Games";
}

<div class="user-info">
    <h4>Name: @ViewBag.User.Name</h4>
    <h4>Bankroll: $@ViewBag.User.Bankroll</h4>
</div>

<div class="game-setup">
    @foreach (var game in ViewBag.Games)
     {
        <div class="col-md-3 col-xs-3">
            <span class="game-name">@game.Name</span>
            <br />
            <span class="game-rules">
                @foreach (var rule in game.Rules)
                {
                    @rule
                }
            </span>
            <br />
            <form asp-controller="Game" asp-action="@game.Name" method="post">
                <input class="btn btn-secondary" type="submit" value="Play" />
            </form>
        </div>
     }
</div>

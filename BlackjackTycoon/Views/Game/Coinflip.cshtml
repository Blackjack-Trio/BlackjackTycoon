
@{
    ViewData["Title"] = "Coinflip";
}

<div class="user-info">
    <h4>Name: @ViewBag.User.Name</h4>
    <h4>Bankroll: $@ViewBag.User.Bankroll</h4>
</div>

<div class="game-info">
    <h1>Welcome to Coinflip!</h1>
    <p>Pick either "Heads" or "Tails" and place a bet to play!</p>
</div>

<div class="game-results">
    @if (ViewBag.LastGame == true)
    {
        <p class="alert alert-success">@ViewBag.GameResults</p>
    }
    else if (ViewBag.LastGame == false)
    {
        <p class="alert alert-danger">@ViewBag.GameResults</p>
    }
</div>

<div class="game-errors">
    @if (ViewBag.Errors != null)
    {
        @foreach (var error in ViewBag.Errors)
        {
            <p class="alert alert-danger">@error</p>
        }
    }
</div>

<form asp-controller="Game" asp-action="PlayCoinflipAsync" method="post">
    <div class="form-group">
        <input type="radio" name="selection" value="heads" /> <label>Heads</label>
        <br />
        <input type="radio" name="selection" value="tails" /> <label>Tails</label>
    </div>
    <div class="form-group">
        <label for="bet">Bet:</label>
        <input type="text" name="bet" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Play" />
    </div>
</form>
